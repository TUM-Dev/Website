{
	"compilerOptions": {
		"allowJs": false,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2023",
		"types": ["vite/client"]
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*.ts", "src/**/*.tsx", "index.html"]
}
