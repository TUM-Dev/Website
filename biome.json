{
    "includes": ["app", "public", "lib", "./*.{json,yaml,ts,mjs,md}"],
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on",
                "useSortedKeys": "on"
            }
        }
    },
    "linter": {
        "domains": {
            "next": "recommended"
        },
        "rules": {
            "correctness": {
                "useExhaustiveDependencies": "off"
            }
        }
    }
}

